{% extends 'base.twig' %}
{% set title = 'Home' %}

{% block main %}
  <p>Welcome back, {{ me.username }}</p>
  <hr>
  <p>All groups:</p>
  <ul>
    {% for group in groups %}
      <li><a href="/g/{{ group.slug }}">{{ group.name }}</a></li>
    {% endfor %}
  </ul>
  <p>All users:</p>
  <ul>
    {% for user in users %}
      <li><a href="/u/{{ user.username }}">{{ user.username }}</a></li>
    {% endfor %}
  </ul>
  <a href="/logout">logout</a>
{% endblock %}